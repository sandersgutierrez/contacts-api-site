{
    "compilerOptions": {
        "outDir": "./dist/",
        "lib": ["dom"],
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "jsx": "preserve",
        "allowJs": true,
        "noLib": false,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_module"]
}
